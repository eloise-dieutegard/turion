  <!-- Modal About -->
  <div id="aboutModal">
    <div id="aboutContent">
      <p>
        Turion Radio is a small radiophonic laboratory, sound experimentation, nomadic station and archive platform.<br>
The radio is live and broadcasts on FM waves (108 MHz frequency if you're nearby hihi) temporarily during events and festivals that we attend from time to time.<br>
If you have any ideas, content to you want to share, collaborate... contact us at radioturion@proton.me and we'll try respond more or less quickly !<br>
The audio flux is provived by the best team <a href="https://p-node.org"style="text-decoration:none" target="_blank">P-node</a> <3
 
      </p>
    </div>
  </div>

  <script>
    const canvas = document.getElementById("myCanvas");
    const ctx = canvas.getContext("2d");
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    let drawing = false;

    canvas.addEventListener("mousedown", () => drawing = true);
    canvas.addEventListener("mouseup", () => {
      drawing = false;
      ctx.beginPath();
    });
    canvas.addEventListener("mousemove", draw);

    function draw(event) {
      if (!drawing) return;
      ctx.lineWidth = 15;
      ctx.lineCap = "round";
      ctx.strokeStyle = "black";

      ctx.lineTo(event.clientX, event.clientY);
      ctx.stroke();
      ctx.beginPath();
      ctx.moveTo(event.clientX, event.clientY);
    }

    // Ajuster le canvas au redimensionnement
    window.addEventListener("resize", () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });

    // --- Sauvegarder capture ---
    function saveCapture() {
      const dataURL = canvas.toDataURL("image/png");
      let captures = JSON.parse(localStorage.getItem("canvasCaptures") || "[]");
      captures.push(dataURL);
      localStorage.setItem("canvasCaptures", JSON.stringify(captures));
    }

    // --- Actions clavier ---
    document.addEventListener("keydown", (e) => {
      if (e.code === "Space") {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
      } else if (e.code === "Enter") {
        saveCapture();
      }
    });

    // --- Boutons ---
    document.getElementById("archivesBtn").addEventListener("click", () => {
      window.location.href = "archives.html";
    });

    // --- About Modal ---
    const aboutModal = document.getElementById("aboutModal");
    const aboutBtn = document.getElementById("aboutBtn");

    aboutBtn.addEventListener("click", () => {
      aboutModal.style.display = "flex";
    });

    aboutModal.addEventListener("click", () => {
      aboutModal.style.display = "none";
    });
  </script>
</body>
